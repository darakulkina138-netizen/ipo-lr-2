import math
#Ввод значений
a = float(input("Введите длину 1-ого основания трапеции"))
b = float(input("Введите длину 2-ого основания трапеции"))
c = float(input("Введите длину 1-ой стороны трапеции"))
d = float(input("Введите длину 2-ой стороны трапеции"))
#Вычисление полупериметра
p = (a + b + c + d) / 2
#Вычисление площади
S = ((a + b) / abs(a - b)) * math.sqrt((p - a) * (p - b) * (p - c) * (p - d))
#Вывод результата
print(S)
